<div class="title-container mt-4">
  <h1 class="text-center title-shadow"><%= @product.name %></h1>
</div>
<div class="line mb-4"></div>

<div class="row justify-content-center">

  <%# Coluna da Esquerda (Carrossel) %>
  <div class="col-md-6">
    <div id="product-carousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% @product.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <%= cl_image_tag photo.key, class: "product-image-carousel" %>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#product-carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#product-carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </button>
    </div>
  </div>

  <%# Coluna da Direita (Informações) %>
  <div class="col-md-6">

    <%# 1. PREÇO (Movido para o topo) %>
    <h2 class="text-neon">Price: <span class="price"> <%= number_to_currency(@product.price, unit: "BTC ") %></span></h2>

    <%# 2. VENDEDOR (Destacado) %>
    <div class="seller-info mb-3">
      Sold by:
      <%# (Quando a página do vendedor, este link funcionará) %>
      <%= link_to @product.user.username, "#", class: "seller-link" %>
    </div>

    <%# 3. BOTÕES %>
    <%= link_to "Buy Now", add_to_cart_path(@product), data: {turbo_method: :post}, class: "btn btn-buy btn-lg mt-3 mb-3" %>

    <%# 4. LÓGICA DE ADMIN (Botões Edit/Delete) %>
    <%# O Pundit checa a regra 'update?' %>
    <% if policy(@product).update? %>
      <div class="mb-3 d-flex justify-content-start gap-2">
        <%= link_to 'Edit Product', edit_product_path(@product), class: 'btn btn-edit' %>
        <%= link_to 'Delete Product', product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
      </div>
    <% end %>

    <%# Linha divisória sutil %>
    <hr class="my-4">

    <%# 5. OVERVIEW %>
    <h2>OVERVIEW:</h2>
    <p class="product-overview"><%= @product.overview %></p>

    <%# 6. SPECS %>
    <h2 class="mt-4">TECHNICAL SPECS:</h2>
    <ul class="product-specs list-group list-group-flush">
      <li class="list-group-item"><strong>Name:</strong> <span class="font-style"><%= @product.name %></span></li>
      <li class="list-group-item"><strong>Model:</strong> <span class="font-style"><%= @product.model %></span></li>
      <li class="list-group-item"><strong>Category:</strong> <span class="font-style"><%= @product.category %></span></li>
      <li class="list-group-item"><strong>Manufacturer:</strong> <span class="font-style"><%= @product.manufacturer %></span></li>
    </ul>

  </div>
</div>

<%= link_to 'Back to Products', products_path, class: 'btn btn-secondary mt-4' %>
