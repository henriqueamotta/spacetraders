<div class="title-container mt-4">
  <h1 class="text-center title-shadow">MY ORDER HISTORY</h1>
</div>
<div class="line mb-4"></div>

<%# Mesmo estilo de lista do Checkout %>
<div class="order-summary p-4">
  <% if @orders.any? %>
    <ul class="list-group">
      <% @orders.each do |order| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong class="d-block">Order ID: <%= order.id %></strong>
            <small>Placed on: <%= order.created_at.strftime("%B %d, %Y") %></small>
          </div>

          <span class="badge bg-success p-2"><%= order.status || "Completed" %></span>
          <span class="text-neon"><%= number_to_currency(order.total, unit: "₿ ") %></span>

          <%# Link para a página de detalhes do pedido (show) %>
          <%= link_to "View Details", order_path(order), class: "btn btn-details" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>You haven't placed any orders yet. <a href="<%= products_path %>">Go shopping!</a></p>
  <% end %>
</div>
