<div class="title-container mt-4">
  <h1 class="text-center title-shadow">MY ORDER HISTORY</h1>
</div>
<div class="line mb-4"></div>

<div class="order-summary p-4">
  <% if @orders.any? %>
    <ul class="list-group">
      <% @orders.each do |order| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">

          <%# Coluna 1: Informações do Pedido %>
          <div style="flex: 1;">
            <strong class="d-block">Order ID: <%= order.id %></strong>
            <small>Placed on: <%= order.created_at.strftime("%B %d, %Y") %></small>
          </div>

          <%# Coluna 2: Status (Centralizado) %>
          <div style="flex: 1; text-align: center;">
            <% if order.status == "Delivered" %>
              <span class="badge bg-success text-dark p-2" style="font-size: 0.9rem; min-width: 100px;">
                <i class="fas fa-check-circle"></i> Delivered
              </span>
            <% else %>
              <span class="badge bg-warning text-dark p-2" style="font-size: 0.9rem; min-width: 100px;">
                <i class="fas fa-clock"></i> Processing
              </span>
            <% end %>
          </div>

          <%# Coluna 3: Preço %>
          <div style="flex: 1; text-align: center;">
            <span class="text-neon"><%= number_to_currency(order.total, unit: "₿ ") %></span>
          </div>

          <%# Coluna 4: Botão %>
          <div style="flex: 0;">
            <%= link_to "View Details", order_path(order), class: "btn btn-details", style: "white-space: nowrap;" %>
          </div>

        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-center mt-3">You haven't placed any orders yet. <a href="<%= products_path %>" class="text-neon">Go shopping!</a></p>
  <% end %>
</div>
