<div class="navbar navbar-expand-lg navbar-dark navbar-spacetraders sticky-top">
  <div class="container-fluid">

    <%# 1. Logo %>
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo-space.png" %>
    <% end %>

    <%# 2. BOTÃO HAMBÚRGUER (Mobile) %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%# 3. CONTEÚDO COLAPSÁVEL (Links e Ícones) %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <%# 3a. GRUPO DO CENTRO (Links Principais) %>
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Shop', products_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sell', new_product_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About Us', about_us_path, class: 'nav-link' %>
        </li>
      </ul>

      <%# 3b. GRUPO DA DIREITA (Ícones) %>
      <ul class="navbar-nav navbar-icons">
        <%# Ícone do Carrinho %>
        <li class="nav-item">
          <%= link_to new_order_path, class: "nav-link" do %>
            <i class="fa-solid fa-cart-shopping"></i>
          <% end %>
        </li>

        <%# Ícone do Usuário (Dropdown) %>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%# Ícone de Usuário %>
              <i class="fa-solid fa-user"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Orders", orders_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="fa-solid fa-user"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
